R:PREFERRED_TIME=7pm
AND(H:AVAILABILITY[PARTY_SIZE=5;DATE=tomorrow;TIME=7pm]=False,H:AVAILABILITY[PARTY_SIZE=5;DATE=tomorrow;TIME=7:30pm]=False,H:AVAILABILITY[PARTY_SIZE=5;DATE=tomorrow;TIME=8pm]=False)
OR(H:WALKINGS_ACCEPTED[PARTY_SIZE=5;DATE=tomorrow;TIME=7pm]=True,H:WALKINGS_ACCEPTED[PARTY_SIZE=5;DATE=tomorrow;TIME=7:30pm]=True,H:WALKINGS_ACCEPTED[PARTY_SIZE=5;DATE=tomorrow;TIME=8pm]=True)
